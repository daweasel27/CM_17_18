<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_test"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageViewGoogle"
        android:layout_width="34dp"
        android:layout_height="40dp"
        android:src="@drawable/google"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageViewFavorites"
        android:layout_marginLeft="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/imageViewStart"
        android:layout_width="168dp"
        android:layout_height="180dp"
        android:src="@drawable/start"
        app:layout_constraintLeft_toRightOf="@+id/imageViewLogo"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageViewLogo"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="217dp"
        android:layout_height="226dp"
        android:src="@drawable/logo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.2" />

    <ImageView
        android:id="@+id/imageViewFavorites"
        android:layout_width="81dp"
        android:layout_height="86dp"
        android:src="@drawable/hearicon"
        app:layout_constraintTop_toBottomOf="@+id/imageViewStart"
        app:layout_constraintRight_toRightOf="@+id/imageViewStart"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewStart" />

</android.support.constraint.ConstraintLayout>