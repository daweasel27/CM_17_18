<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_layout"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:context=".WatchTrailer"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

    <fragment
        android:name="com.google.android.youtube.player.YouTubePlayerFragment"
        android:id="@+id/youtube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/sdk_start_button"
        android:layout_alignStart="@+id/ethnicity_textview"
        android:layout_toStartOf="@+id/sdk_start_button" />

    <Button
            android:id="@+id/sdk_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ethnicity_textview"
        android:layout_alignBottom="@+id/ethnicity_textview"
        android:layout_alignParentEnd="true" />

        <ToggleButton
            android:id="@+id/front_back_toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textOff="FRONT"
            android:textOn="BACK"
            android:layout_above="@+id/ethnicity_textview"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/surfaceview_visibility_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/smile_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            tools:text="smile" />

        <TextView
            android:id="@+id/age_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/smile_textview"
            android:layout_margin="16dp"
            tools:text="age" />

        <TextView
            android:id="@+id/ethnicity_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/age_textview"
            android:layout_margin="16dp"
            tools:text="ethnicity" />

    </RelativeLayout>

