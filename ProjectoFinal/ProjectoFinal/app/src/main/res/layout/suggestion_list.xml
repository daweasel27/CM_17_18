    <ImageView
        android:id="@+id/imageViewMovie1"
        android:layout_width="79dp"
        android:layout_height="126dp"
        android:src="@drawable/deadpool2"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp" />


    <TextView
        android:id="@+id/editText37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:inputType="textPersonName"
        android:text="Kingsman 2 (2017)"
        app:layout_constraintTop_toTopOf="@+id/imageViewMovie2"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText3" />

    <ImageView
        android:id="@+id/imageView57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/editText37"
        app:layout_constraintLeft_toLeftOf="@+id/editText37" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7.0/10"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/imageView57"
        app:layout_constraintBottom_toBottomOf="@+id/imageView57"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.571"
        app:layout_constraintLeft_toLeftOf="@+id/textView26" />


    <ImageView
        android:id="@+id/imageViewMovie3"
        android:layout_width="79dp"
        android:layout_height="126dp"
        android:src="@drawable/justice"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMovie2"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewMovie1" />


    <TextView
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"

        android:inputType="textPersonName"
        android:text="Deadpool 2 (2018)"
        app:layout_constraintLeft_toRightOf="@+id/imageViewMovie1"
        android:layout_marginLeft="34dp"
        app:layout_constraintTop_toTopOf="@+id/imageViewMovie1"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/editText34"
        app:layout_constraintLeft_toLeftOf="@+id/editText34" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.9/10"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/textView27" />


</android.support.constraint.ConstraintLayout>