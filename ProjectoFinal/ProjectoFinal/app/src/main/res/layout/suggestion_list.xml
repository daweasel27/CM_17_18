<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"     xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView112"
        android:layout_width="22dp"
        android:layout_height="37dp"
        android:src="@drawable/heartfull"
        app:layout_constraintTop_toTopOf="@+id/editText34"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewGoogle" />

    <ImageView
        android:id="@+id/imageViewHeart1"
        android:layout_width="22dp"
        android:layout_height="37dp"
        android:src="@drawable/heart"
        app:layout_constraintTop_toTopOf="@+id/editText3"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageViewGoogle"
        android:layout_width="22dp"
        android:layout_height="37dp"
        android:src="@drawable/heart"
        app:layout_constraintTop_toTopOf="@+id/editText37"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewHeart1" />

    <ImageView
        android:id="@+id/imageViewMovie2"
        android:layout_width="79dp"
        android:layout_height="126dp"
        android:src="@drawable/kingsman"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMovie1"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewMovie1" />


    <TextView
        android:id="@+id/editText34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"

        android:inputType="textPersonName"
        android:text="Justice League (2017)"
        app:layout_constraintTop_toTopOf="@+id/imageViewMovie3"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText37" />

    <ImageView
        android:id="@+id/imageView55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/editText3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText3" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.0/10"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView55"
        app:layout_constraintLeft_toRightOf="@+id/imageView55"
